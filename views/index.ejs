<body>
    <div class="grid_main">
        <div class="header">
            <ul>
                <li><a href="#">About Us</a></li>
                <li><a href="#">Terms Of Services</a></li>
                <li><a href="#">Legal Certificates</a></li>
            </ul>
            <span class="nav-btn"><i class="fas fa-bars"></i></span>
            <h1 class="title">MSK Shakil</h1>
        </div>
        <div class="navigation">
            <span id="close"><i class="fas fa-times-circle"></i></span>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/all">All Videos </a></li>
                <li>Catagory <span><i class="fas fa-chevron-down"></i></span>
                    <ul class="sbc">
                        <li><a href="/catagory/review">Review</a></li>
                        <li><a href="/catagory/best_deals">Best Deals</a></li>
                        <li><a href="/catagory/latest_tech">Latest Tech</a></li>
                    </ul>
                </li>
                <li>Tutorials <span><i class="fas fa-chevron-down"></i></span>
                    <ul class="sbc">
                        <li><a href="/tutorials/basic_guide">Basic Guide</a></li>
                        <li><a href="/tutorials/pc_building_guide">PC building Guide</a></li>
                    </ul>
                </li>
            </ul>
        </div>
        <!-- <div class="image">
            <img src="/img/header.jpg" alt="header_image">
        </div> -->
        <div class="featured">
            <h1>Featurd videos</h1>
            <%if(featured){%>
                <% for(i=0; i<featured.length; i++){%>
                    <%if(i==0){%>
                        <div class="video top">
                    <%}else{%>
                        <div class="video">
                    <% } %> 
                        <a href="/video/<%=featured[i]._id%>">
                            <img src="<%=featured[i].location%>" alt="#">
                            <span class="play"><i class="far fa-play-circle"></i></span>
                            <p class="title"><%=featured[i].title%></p>
                            <p class="date"><%=featured[i].time.toDateString();%></p>
                            <span class="bg"></span>
                        </a>
                    </div>
                <%}%>
            <%}else{%>
                <h1>Featurd videos not set</h1>
            <%}%>
        </div>
        <div class="contents">
            <div class="editors_choice">
                <h1>Latest Videos</h1>
                <% for(i=0; i<latest.length; i++){%>
                    <div class="video-card">
                        <a href="/video/<%=latest[i]._id%>">
                            <div class="img">
                            <span><i class="far fa-play-circle"></i></span>
                            <img src="<%=latest[i].location%>" alt="#">
                            </div>
                        </a>
                        <p class="title"><%=latest[i].title%></p>
                        <p class="date"><%=latest[i].time.toDateString()%></p>
                        <p class="discription"><%=latest[i].discription%></p>
                    </div>
                <%}%>
            </div>
        <div class="footer">
            <p class="copy">Copyright Â©2020 All rights reserved</p>
            <p class="follow">Follow Us On</p>
            <span></span>
            <span></span>
            <span></span>
            <span></span>
        </div>
    </div>
    <script src="/main.js"></script>
